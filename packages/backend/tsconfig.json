{
	"include": ["**/*.ts"],
	"exclude": ["tests/**/*.ts"],
	"extends": "../../tsconfig.json",
	"compilerOptions": {
		"target": "ES2022",
		"module": "ESNext",
		/* Bundler mode */
		"moduleResolution": "bundler",
		"allowImportingTsExtensions": true,
		"verbatimModuleSyntax": true,
		"noEmit": true,

		/* Linting */
		"strict": true,
		"skipLibCheck": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noFallthroughCasesInSwitch": true,
		"noUncheckedSideEffectImports": true,
		"baseUrl": "."
	}
}
