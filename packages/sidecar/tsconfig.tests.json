{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "noEmit": true,
    // Ensure DOM & Web types available for Response, fetch, etc.
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    // Keep strictness same as package tsconfig
    "strict": true
  },
  "include": [
    "src/**/*",
    "tests/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}

